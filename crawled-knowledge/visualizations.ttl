@prefix dashb: <http://dynamicdashboard.ilabt.imec.be/broker/ontologies/dashboard#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix time: <http://www.w3.org/2006/time#> .
@prefix om: <http://www.ontology-of-units-of-measure.org/resource/om-2/> .

@base <http://localhost/web-thing-gateway/things/> .

dashb:RealtimeDataVisualization rdfs:subClassOf dashb:Visualization .

<colored-measurement> a dashb:RealtimeDataVisualization ;
    rdfs:label "Textual display of observation (colored if thresholds are set)"@en ;
    dashb:component [
        dashb:accepts [ dashb:datatype xsd:double ];
        dashb:min 1;
        dashb:max 1
    ] .

<column-chart> a dashb:RealtimeDataVisualization ;
    rdfs:label "Column chart"@en ;
    dashb:component [
        dashb:accepts [ dashb:datatype xsd:double ];
        dashb:min 1;
        dashb:max 10
    ] .

<marker-map> a dashb:RealtimeDataVisualization ;
    rdfs:label "Map (displaying locations)"@en ;
    dashb:component [
        dashb:accepts ([ a om:EclipticLatitude ] [ a om:EclipticLongitude ]);
        dashb:min 1;
        dashb:max 1
    ] .

<route-map> a dashb:RealtimeDataVisualization ;
    rdfs:label "Map (displaying routes)"@en ;
    dashb:component [
        dashb:accepts ([ a om:EclipticLatitude ] [ a om:EclipticLongitude ]);
        dashb:min 1;
        dashb:max 1
    ] .

<modern-gauge> a dashb:RealtimeDataVisualization ;
    rdfs:label "Gauge (modern style)"@en ;
    dashb:component [
        dashb:accepts [ dashb:datatype xsd:double ];
        dashb:min 1;
        dashb:max 1
    ] .

<traditional-gauge> a dashb:RealtimeDataVisualization ;
    rdfs:label "Gauge (traditional style)"@en ;
    dashb:component [
        dashb:accepts [ dashb:datatype xsd:double ];
        dashb:min 1;
        dashb:max 1
    ] .

<time-series-line-chart-with-time-range-selector> a dashb:RealtimeDataVisualization ;
    rdfs:label "Line chart (updating at observation frequency)"@en ;
    dashb:component [
        dashb:accepts [ dashb:datatype xsd:double ];
        dashb:min 1;
        dashb:max 1
    ] .

<multiple-time-series-line-chart-with-time-range-selector> a dashb:RealtimeDataVisualization ;
    rdfs:label "Line chart (updating at observation frequency)"@en ;
    dashb:component [
        dashb:accepts [ dashb:datatype xsd:double ];
        dashb:min 2;
        dashb:max 10
    ] .

<measurement-smiley> a dashb:RealtimeDataVisualization ;
    rdfs:label "Smiley (emotion according to configured thresholds)"@en ;
    dashb:component [
        dashb:accepts [ dashb:datatype xsd:double ];
        dashb:min 1;
        dashb:max 1
    ] .

dashb:HistoricalDataVisualization rdfs:subClassOf dashb:Visualization .

<time-series-line-chart-with-time-range-selector> a dashb:HistoricalDataVisualization ;
    rdfs:label "Line chart (updating at observation frequency)"@en ;
    dashb:component [
        dashb:accepts [ dashb:datatype xsd:double ];    # Question: dashb:category is not used? Every metric has it described... However: its value is ALWAYS dashb:1D. Can we then leave this out? We nowhere have a dashb:2D, dashb:3D or whatever other dimensionality.
        dashb:min 1;
        dashb:max 1
    ] .

<day-range-line-chart> a dashb:HistoricalDataVisualization ;
    rdfs:label "Line chart (hourly observations)"@en ;
    dashb:component [
        dashb:accepts [ dashb:bucket time:unitHour ];
        dashb:min 1;
        dashb:max 10
    ] .

<sensor-measurements-per-hour-table> a dashb:HistoricalDataVisualization ;
    rdfs:label "Table (sensor measurements per hour)"@en ;
    dashb:component [
        dashb:accepts [ dashb:bucket time:unitHour ];
        dashb:min 1;
        dashb:max 10
    ] .

<marker-map> a dashb:HistoricalDataVisualization ;
    rdfs:label "Map (displaying locations)"@en ;
    dashb:component [
        dashb:accepts ([ a om:EclipticLatitude ] [ a om:EclipticLongitude ]);
        dashb:min 1;
        dashb:max 1
    ] .

<route-map> a dashb:HistoricalDataVisualization ;
    rdfs:label "Map (displaying routes)"@en ;
    dashb:component [
        dashb:accepts ([ a om:EclipticLatitude ] [ a om:EclipticLongitude ]);
        dashb:min 1;
        dashb:max 1
    ] .